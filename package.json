{
  "name": "octopus-hackathon-api",
  "type": "module",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "dev": "node --experimental-transform-types --watch src/index.ts",
    "start": "node --experimental-transform-types src/index.ts",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test:e2e": "node --experimental-transform-types scripts/run-e2e.ts",
    "test:integration": "node --experimental-transform-types scripts/integration-test.ts",
    "test:performance": "node --experimental-transform-types scripts/performance-test.ts",
    "test:security": "node --experimental-transform-types scripts/security-test.ts",
    "test:all": "pnpm test:e2e && pnpm test:integration && pnpm test:performance && pnpm test:security",
    "docker:dev": "docker compose -f docker/compose.dev.yml up --build",
    "docker:dev:down": "docker compose -f docker/compose.dev.yml down -v",
    "docker:prod": "docker compose -f docker/compose.prod.yml up --build -d",
    "docker:prod:down": "docker compose -f docker/compose.prod.yml down -v",
    "docker:logs": "docker compose -f docker/compose.dev.yml logs -f"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.948.0",
    "@hono/node-server": "^1.19.6",
    "@hono/sentry": "^1.2.2",
    "@hono/zod-openapi": "^1.1.5",
    "@scalar/hono-api-reference": "^0.9.28",
    "hono": "^4.10.8",
    "hono-rate-limiter": "^0.4.2",
    "prom-client": "^15.1.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@hono/eslint-config": "^2.0.3",
    "@types/node": "^24.10.2",
    "eslint": "^9.39.2",
    "prettier": "^3.7.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.49.0"
  }
}
